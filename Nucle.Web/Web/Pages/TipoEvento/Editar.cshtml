@page "{id:guid}"
@model Web.Pages.TipoEvento.EditarModel
@{
    ViewData["Title"] = "Editar Tipo de Evento";
}

<h1 class="text-center text-primary mb-4">Editar Tipo de Evento</h1>
<div class="container">
    <div class="col-md-6 offset-md-3">
        <form method="post">
            <input type="hidden" asp-for="TipoEvento.idTipoEvento" />

            <div class="form-group mb-3">
                <label asp-for="TipoEvento.nombre" class="form-label">Nombre del tipo de evento</label>
                <input asp-for="TipoEvento.nombre" class="form-control" />
                <span asp-validation-for="TipoEvento.nombre" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a class="btn btn-outline-primary" asp-page="./Index">
                    <i class="bi bi-arrow-left me-2"></i>Volver
                </a>
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
