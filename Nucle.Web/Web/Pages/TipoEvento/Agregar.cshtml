@page
@model Web.Pages.TipoEvento.AgregarModel
@{
    ViewData["Title"] = "Agregar Tipo de Evento";
}

<h1>Agregar Tipo de Evento</h1>
<div class="container">
    <div class="col-xl-5 col-lg-6 col-md-8 col-sm-10 mx-auto">
        <form method="post">
            <div class="form-group">
                <label class="control-label" asp-for="tipoEvento.nombre">Nombre del tipo de evento</label>
                <input class="form-control" asp-for="tipoEvento.nombre" />
                <span class="text-danger" asp-validation-for="tipoEvento.nombre"></span>
            </div>
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <a class="btn btn-primary" asp-page="./Index">Volver</a>
                <input type="submit" value="Agregar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
