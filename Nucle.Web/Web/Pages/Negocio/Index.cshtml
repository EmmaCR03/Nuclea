@page
@model Web.Pages.Negocio.IndexModel
@{
    ViewData["Title"] = "Negocios";
}

<h1 class="display-4 text-center text-primary mb-5 animate__animated animate__fadeIn">Listado de Negocios</h1>
<div class="container d-flex justify-content-center" style="margin-bottom: 25px;">
    <a type="button" class="btn btn-primary btn-lg shadow-lg px-4 py-2 rounded-pill" asp-page="./Agregar">
        <i class="bi bi-plus-circle me-2"></i> Agregar Negocio
    </a>
</div>

<div class="container">
    <div class="row">
        @if (Model.negocios != null && Model.negocios.Any())
        {
            @foreach (var negocio in Model.negocios)
            {
                <div class="col-md-4 mb-4">
                    <div class="card p-4 shadow-lg border-0 rounded-3 business-card">
                        @if (!string.IsNullOrEmpty(negocio.ImagenUrl))
                        {
                            <img src="@negocio.ImagenUrl" class="card-img-top rounded-top" alt="Imagen del negocio" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body">
                            <h5 class="card-title text-center text-primary mb-3">
                                <strong>@negocio.nombre</strong>
                            </h5>

                            <p class="card-text text-center mb-3">
                                <strong>Descripción:</strong> @negocio.descripcion
                            </p>

                            <div class="d-flex justify-content-center flex-wrap gap-2 mt-4">
                                <a class="btn btn-primary px-4 py-2 rounded-pill shadow-sm" asp-page="./Editar" asp-route-id="@negocio.idNegocio">
                                    <i class="bi bi-pencil-square me-2"></i> Editar
                                </a>
                                <a class="btn btn-danger px-4 py-2 rounded-pill shadow-sm" asp-page="./Eliminar" asp-route-id="@negocio.idNegocio">
                                    <i class="bi bi-trash-fill me-2"></i> Eliminar
                                </a>
                                <a class="btn btn-info text-white px-4 py-2 rounded-pill shadow-sm" asp-page="./Detalle" asp-route-id="@negocio.idNegocio">
                                    <i class="bi bi-info-circle-fill me-2"></i> Detalle
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p class="text-center text-muted">No hay negocios registrados en este momento.</p>
        }
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .business-card {
        background: linear-gradient(135deg, #f8f9fa, #ffffff);
        border-radius: 12px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        height: 100%;
    }

        .business-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            background: linear-gradient(135deg, #ffffff, #f8f9fa);
        }

    .card-body {
        padding: 1.5rem;
        display: flex;
        flex-direction: column;
    }

    .card-title {
        font-size: 1.3rem;
        color: #1e3a8a;
        margin-bottom: 1rem;
    }

    .card-text {
        font-size: 0.95rem;
        color: #495057;
        margin-bottom: 0.75rem;
    }

    .btn-outline-primary {
        border-color: #007bff;
        color: #007bff;
        transition: all 0.3s ease;
        width: 48%;
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
        transition: all 0.3s ease;
        width: 48%;
    }

    .btn-outline-primary:hover {
        background-color: #007bff;
        color: white;
    }

    .btn-outline-danger:hover {
        background-color: #dc3545;
        color: white;
    }

    .bi {
        font-size: 1rem;
    }

    .animate__animated {
        animation-duration: 1.5s;
    }

    .animate__fadeIn {
        animation-name: fadeIn;
    }

    .text-primary {
        color: #2c3e50 !important;
    }
</style>

@section Scripts {
    <!-- Incluir animaciones si es necesario -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}