@page
@model Web.Pages.Negocio.AgregarModel
@{
    ViewData["Title"] = "Agregar Negocio";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">Agregar Nuevo Negocio</h3>
                </div>
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data" id="formNegocio">
                        <div class="form-group mb-3">
                            <label asp-for="negocio.nombre" class="form-label">Nombre de la promotora</label>
                            <input asp-for="negocio.nombre" class="form-control" />
                            <span asp-validation-for="negocio.nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="negocio.descripcion" class="form-label">Descripción de la promotora</label>
                            <textarea asp-for="negocio.descripcion" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="negocio.descripcion" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label class="form-label">Imagen del negocio</label>
                            <input type="file" name="imagenFile" class="form-control" accept="image/*" />
                        </div>


                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-page="./Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
}

<script>
    $(document).ready(function() {
        $('#formNegocio').on('submit', function() {
            // Convertir el GUID a formato correcto antes de enviar
            const fkRol = $('#negocio_fkRol').val();
            if (fkRol) {
                $('#negocio_fkRol').val(fkRol.toLowerCase());
            }
        });
    });
</script>
}