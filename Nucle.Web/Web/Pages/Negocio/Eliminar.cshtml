@page
@model Web.Pages.Negocio.EliminarModel
@{
    ViewData["Title"] = "Confirmar eliminación de negocio";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Confirmar eliminación de negocio
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <h5 class="alert-heading">¿Está seguro que desea eliminar este negocio?</h5>
                        <p class="mb-0">Esta acción no se puede deshacer. Todos los datos relacionados se perderán permanentemente.</p>
                    </div>

                    <div class="negocio-details mb-4">
                        <h3 class="text-primary">@Html.DisplayFor(modelo => modelo.negocio.nombre)</h3>
                        <p class="text-muted mb-3">@Html.DisplayFor(modelo => modelo.negocio.descripcion)</p>

                      
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-page="./Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Volver al listado
                        </a>

                        <form method="post" asp-route-id="@Model.negocio.idNegocio" class="mb-0">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt me-2"></i>Confirmar eliminación
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .negocio-details {
        background-color: #f8f9fa;
        padding: 1.5rem;
        border-radius: 0.5rem;
        border-left: 4px solid #dc3545;
    }

    .details-grid {
        margin-top: 1rem;
    }

    .detail-item {
        margin-bottom: 0.75rem;
    }

    .detail-label {
        font-weight: bold;
    }

    .detail-value {
        color: #5c6770;
    }
</style>
