@page
@model Web.Pages.Ubicacion.DetalleModel
@{
    ViewData["Title"] = "Detalle de la Ubicación";
}

<h1 class="display-4 text-center text-primary mb-5 animate__animated animate__fadeIn">Detalle de la Ubicación</h1>

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-5 p-5 location-card">
            <div class="card-body">
                <h5 class="card-title text-center text-dark mb-4">
                    <strong>@Html.DisplayFor(model => model.Ubicacion.nombreUbicacion)</strong>
                </h5>

                <div class="row mb-4">
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(model => model.Ubicacion.direccion):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(model => model.Ubicacion.direccion)</p>
                    </div>
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(model => model.Ubicacion.capacidad):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(model => model.Ubicacion.capacidad)</p>
                    </div>
                </div>

                <div class="text-center">
                    <a type="button" class="btn btn-outline-primary w-50" asp-page="./Index">
                        <i class="bi bi-arrow-left me-2"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos mejorados para el detalle -->
<style>
    .location-card {
        background: #f4f7fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

        .location-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

    .card-body {
        padding: 3rem;
    }

    .card-title {
        font-size: 2rem;
        color: #2b3a42;
        font-weight: 700;
    }

    .card-text {
        font-size: 1.2rem;
        color: #5c6770;
    }

    .btn-outline-primary {
        border-color: #3b82f6;
        color: #3b82f6;
        transition: background-color 0.3s ease, color 0.3s ease;
        padding: 10px 30px;
        font-size: 1.1rem;
    }

        .btn-outline-primary:hover {
            background-color: #3b82f6;
            color: white;
        }

    .bi {
        font-size: 1.3rem;
    }

    .animate__animated {
        animation-duration: 1.5s;
    }

    .animate__fadeIn {
        animation-name: fadeIn;
    }
</style>