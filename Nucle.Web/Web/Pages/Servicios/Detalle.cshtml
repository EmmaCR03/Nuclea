@page
@model Web.Pages.Servicios.DetalleADMModel
@{
}
<h1 class="display-4 text-center text-primary mb-5 animate__animated animate__fadeIn">Detalle del Servicio</h1>

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-5 p-5 service-card">
            <div class="card-body">
                <h5 class="card-title text-center text-dark mb-4">
                    <strong>@Html.DisplayFor(modelo => modelo.Servicio.nombreServicio)</strong>
                </h5>

                <p class="card-text text-center text-muted mb-4">
                    <i class="bi bi-card-text me-2"></i> <strong>Descripción:</strong> @Html.DisplayFor(modelo => modelo.Servicio.descripcion)
                </p>

                <!-- Sección de Costo centrada con estilo -->
                <div class="text-center mb-5">
                    <p class="fs-5 text-secondary">
                        <i class="bi bi-cash-coin me-2"></i> <strong>@Html.DisplayNameFor(modelo => modelo.Servicio.costo):</strong>
                    </p>
                    <p class="display-6 fw-bold text-success">@Html.DisplayFor(modelo => modelo.Servicio.costo)</p>
                </div>

                <div class="text-center">
                    <a type="button" class="btn btn-outline-primary w-50" asp-page="./IndexADM">
                        <i class="bi bi-arrow-left me-2"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos personalizados -->
<style>
    .service-card {
        background: #f4f7fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
            background: #ffffff;
        }

    .card-body {
        padding: 3rem;
    }

    .card-title {
        font-size: 2rem;
        color: #2b3a42;
        font-weight: 700;
    }

    .card-text {
        font-size: 1.2rem;
        color: #5c6770;
    }

    .btn-outline-primary {
        border-color: #3b82f6;
        color: #3b82f6;
        transition: background-color 0.3s ease, color 0.3s ease;
        padding: 10px 30px;
        font-size: 1.1rem;
    }

        .btn-outline-primary:hover {
            background-color: #3b82f6;
            color: white;
        }

    .bi {
        font-size: 1.3rem;
    }

    .animate__animated {
        animation-duration: 1.5s;
    }

    .animate__fadeIn {
        animation-name: fadeIn;
    }
</style>
