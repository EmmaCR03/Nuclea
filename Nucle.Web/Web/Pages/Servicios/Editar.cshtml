@page
@model Web.Pages.Servicios.EditarServicioModel
@{
    ViewData["Title"] = "Editar Servicio";
}

<h1>Editar Servicio</h1>

<form method="post">
    <input type="hidden" asp-for="Servicio.idServicio" />
    <div class="form-group">
        <label class="control-label" asp-for="Servicio.nombreServicio">Nombre del Servicio</label>
        <input class="form-control" asp-for="Servicio.nombreServicio" />
        <span asp-validation-for="Servicio.nombreServicio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Servicio.descripcion">descripcion</label>
        <input class="form-control" asp-for="Servicio.descripcion" />
        <span asp-validation-for="Servicio.descripcion" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label" asp-for="Servicio.costo">costo</label>
        <input class="form-control" asp-for="Servicio.costo" />
        <span asp-validation-for="Servicio.costo" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a href="./IndexADM" class="btn btn-secondary">Cancelar</a>
</form>
