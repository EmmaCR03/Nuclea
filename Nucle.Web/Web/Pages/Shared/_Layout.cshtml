<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/bootstrap/dist/css/flatpickr.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light border-bottom box-shadow mb-3"
             style="background-color: #ADD8E6;">
            <div class="container-fluid">
                <a class="navbar-brand d-lg-none" href="#">Menú</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-center flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white menu-hover" asp-area="" asp-page="/Index">
                                <i class="bi bi-house-door d-lg-none"></i>
                                <span class="d-none d-lg-inline">Menu</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white menu-hover" asp-area="" asp-page="/Eventos/Index">
                                <i class="bi bi-calendar-event d-lg-none"></i>
                                <span class="d-none d-lg-inline">Eventos</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white menu-hover" asp-area="" asp-page="/Negocio/Index">
                                <i class="bi bi-shop d-lg-none"></i>
                                <span class="d-none d-lg-inline">Negocios</span>
                            </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && (User.IsInRole("2")))
{
                        <li class="nav-item">
                            <a class="nav-link text-white menu-hover" asp-area="" asp-page="/Servicios/IndexADM">
                                <i class="bi bi-award d-lg-none"></i>
                                <span class="d-none d-lg-inline">Patrocinio</span>
                            </a>
                        </li>
}
                        <li class="nav-item">
                            <a class="nav-link text-white menu-hover" asp-area="" asp-page="/Cuenta/Perfil">
                                <i class="bi bi-person-circle d-lg-none"></i>
                                <span class="d-none d-lg-inline">Cuenta</span>
                            </a>
                        </li>
                   
                    @if (User.Identity.IsAuthenticated && User.IsInRole("4"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white menu-hover" href="#" id="adminDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear d-lg-none"></i>
                                <span class="d-none d-lg-inline">Administración</span>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Servicios/IndexADM">Servicios (ADM)</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Eventos/IndexADM">Eventos (ADM)</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/Ubicacion/Index">Ubicación</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/TipoEvento/Index">Tipo de Evento</a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-area="" asp-page="/TodosUsuarios/Index">Usuarios</a>
                                </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="" asp-page="/Negocio/Index">Negocios(ADM)</a>
                                    </li>
                            </ul>
                        </li>
                    }
                    </ul>
                    <div class="d-flex">
                        @await Html.PartialAsync("_AutenticacionParcial")
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Web - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/flatpickr.js"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <style>
        .menu-hover {
            padding: 10px 20px;
            border-radius: 10px;
            transition: background-color 0.3s ease, transform 0.2s ease;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .menu-hover:hover {
                background-color: rgba(255, 255, 255, 0.3);
                transform: scale(1.05);
            }

        .nav-item .active {
            background-color: rgba(255, 255, 255, 0.5);
            border-radius: 10px;
            font-weight: bold;
            transform: scale(1.05);
        }

        /* Estilos responsivos */
        @@media (max-width: 992px) {
            .navbar-nav

        {
            width: 100%;
            gap: 0.5rem;
            margin-bottom: 1rem;
        }

        .nav-item {
            width: 100%;
            text-align: center;
        }

        .menu-hover {
            justify-content: center;
            padding: 12px 0;
        }

        #navbarContent {
            padding: 1rem 0;
        }

        }

        @@media (min-width: 992px) {
            .navbar-nav

        {
            gap: 1rem;
        }

        }</style>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Activar elemento del menú actual
            let currentPath = window.location.pathname.toLowerCase();
            document.querySelectorAll(".nav-link").forEach(link => {
                let pagePath = link.getAttribute("href").toLowerCase();
                link.classList.remove("active");
                if (currentPath === pagePath ||
                   (currentPath.startsWith(pagePath) && pagePath !== "/") {
                    link.classList.add("active");
                }
            });

            // Mejorar el comportamiento del toggler
            const navbarToggler = document.querySelector(".navbar-toggler");
            const navbarContent = document.getElementById("navbarContent");

            navbarToggler.addEventListener("click", function() {
                const isExpanded = navbarToggler.getAttribute("aria-expanded") === "true";
                if (isExpanded) {
                    navbarContent.style.maxHeight = "0";
                    setTimeout(() => {
                        navbarContent.style.display = "none";
                    }, 300);
                } else {
                    navbarContent.style.display = "flex";
                    setTimeout(() => {
                        navbarContent.style.maxHeight = navbarContent.scrollHeight + "px";
                    }, 10);
                }
            });

            // Ajustar para cambios de tamaño de pantalla
            window.addEventListener("resize", function() {
                if (window.innerWidth >= 992) {
                    navbarContent.style.display = "";
                    navbarContent.style.maxHeight = "";
                }
            });
        });
    </script>
</body>
</html>