<head>
    <!-- Agregar Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<style>
    .autenticacion {
        color: white;
        font-size: 20px;
    }

    .perfil-icono {
        margin-right: 10px;
        font-size: 24px; 
        color: white;
    }

    .btn-iniciar-sesion {
        background-color: #007bff;
        color: white;
        padding: 8px 15px;
        text-decoration: none;
        border-radius: 5px;
        font-size: 16px;
    }

        .btn-iniciar-sesion:hover {
            background-color: #0056b3;
        }
</style>

@if (User.Identity.IsAuthenticated)
{
    <div class="d-flex align-items-center">
        <i class="fas fa-user perfil-icono"></i>
        <span class="autenticacion">@User.Identity.Name, Sesión Iniciada</span>
        <a class="autenticacion" asp-page="/cuenta/logout">Cerrar Sesión</a>
    </div>
}
else
{
    <div class="d-flex align-items-center">
        <i class="fas fa-user perfil-icono"></i>
        <span class="autenticacion">Usuario no autenticado</span>
        <a class="btn-iniciar-sesion" asp-page="/cuenta/login">Iniciar Sesión</a>
    </div>
}
