@page
@model Web.Pages.Eventos.DetalleADMModel
@{
}
<h1 class="display-4 text-center text-primary mb-5 animate__animated animate__fadeIn">Detalle del Evento</h1>

<div class="container d-flex justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg border-0 rounded-5 p-5 event-card">
            <div class="text-center mb-4">
                    <p class="fs-4"><strong>Imagen del Evento:</strong></p>
                    @if (!string.IsNullOrEmpty(Model.evento.ImagenUrl))
                    {
                        <img src="@Model.evento.ImagenUrl" alt="Imagen del Evento" class="img-fluid rounded-3" style="max-height: 400px; object-fit: cover;" />
                    }
                    else
                    {
                        <p>No hay imagen disponible</p>
                    }
                </div>
            <div class="card-body">
                <h5 class="card-title text-center text-dark mb-4">
                    <strong>@Html.DisplayFor(modelo => modelo.evento.nombreEvento)</strong>
                </h5>

                <p class="card-text text-center text-muted mb-4">
                    <i class="bi bi-calendar-event me-2"></i> <strong>Descripción:</strong> @Html.DisplayFor(modelo => modelo.evento.descripcion)
                </p>

                <div class="row mb-4">
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(modelo => modelo.evento.fecha):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(modelo => modelo.evento.fecha)</p>
                    </div>
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(modelo => modelo.evento.horaInicio):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(modelo => modelo.evento.horaInicio)</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(modelo => modelo.evento.horaFin):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(modelo => modelo.evento.horaFin)</p>
                    </div>
                    <div class="col-md-6 text-center">
                        <p class="fs-4"><strong>@Html.DisplayNameFor(modelo => modelo.evento.TipoEvento):</strong></p>
                        <p class="fs-4">@Html.DisplayFor(modelo => modelo.evento.TipoEvento)</p>
                    </div>
                </div>

                <div class="text-center mb-4">
                    <p class="fs-4"><small class="text-muted">@Html.DisplayFor(modelo => modelo.evento.Ubicacion)</small></p>
                </div>
                <div class="text-center mb-4">
                    <p class="fs-4"><small class="text-muted">@Html.DisplayFor(modelo => modelo.evento.Negocio)</small></p>
                </div>
                <div class="text-center mb-4">
                    <p class="fs-4"><small class="text-muted">@Html.DisplayFor(modelo => modelo.evento.Servicios)</small></p>
                </div>


                <div class="text-center">
                    <a type="button" class="btn btn-outline-primary w-50" asp-page="./IndexADM">
                        <i class="bi bi-arrow-left me-2"></i> Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Estilos mejorados para el detalle -->
<style>
    .event-card {
        background: #f4f7fa;
        border-radius: 15px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

    .event-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 50px rgba(0, 0, 0, 0.1);
        background: #ffffff;
    }

    .card-body {
        padding: 3rem;
    }

    .card-title {
        font-size: 2rem;
        color: #2b3a42;
        font-weight: 700;
    }

    .card-text {
        font-size: 1.2rem;
        color: #5c6770;
    }

    .btn-outline-primary {
        border-color: #3b82f6;
        color: #3b82f6;
        transition: background-color 0.3s ease, color 0.3s ease;
        padding: 10px 30px;
        font-size: 1.1rem;
    }

    .btn-outline-primary:hover {
        background-color: #3b82f6;
        color: white;
    }

    .bi {
        font-size: 1.3rem;
    }

    .animate__animated {
        animation-duration: 1.5s;
    }

    .animate__fadeIn {
        animation-name: fadeIn;
    }
</style>